{{ 'section.custom-slide.css' | asset_url | stylesheet_tag }}

{% comment %}
  This section creates a custom slider using Swiper.js.
  It allows you to add multiple slides with images, text, and links.
{% endcomment %}


<!-- Slider main container -->
<div class="swiper">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <img src="{{ block.settings.slide_image | image_url: width:600 }}" alt="{{ block.settings.slide_text }}" width="600" height="400" />
        <h2>{{ block.settings.slide_text }}</h2>
        <a href="{{ block.settings.link_url }}" class="btn">{{ block.settings.link_text }}</a>
      </div>
    {% endfor %}

    ...
  </div>
  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <!-- If we need scrollbar -->
<div class="swiper-scrollbar"></div>
</div>

<!-- Swiper JS -->
<script>
    const swiper = new Swiper('.swiper', {
    // Optional parameters
        direction: 'horizontal',
        loop: true,

        // If we need pagination
        pagination: {
            el: '.swiper-pagination',
        },

        // Navigation arrows
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },

        // And if we need scrollbar
        scrollbar: {
            el: '.swiper-scrollbar',
        },
    });
</script>

{% schema %}
{
  "name": "Custom Slider - Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Custom Slider",
      "info": "This is the title of the slider section.",
      "placeholder": "Enter your title here"
    },
  ],
  "blocks": [
    {
        "type": "slide",
        "name": "Slide",
        "settings": [
            {
                "type": "text",
                "id": "slide_text",
                "label": "Slide Text",
                "default": "Slide Text",
                "info": "Text for the slide.",
                "placeholder": "Enter slide Text"
            },
            {
                "type": "image_picker",
                "id": "slide_image",
                "label": "Slide Image",
                "info": "Image for the slide."
            },
            {
                "type": "text",
                "id": "link_text",
                "label": "Link Text",
                "info": "Text for the link.",
                "default": "Learn More",
                "placeholder": "Enter link text"
            },
            {
                "type": "url",
                "id": "link_url",
                "label": "Link URL",
            }
        ]
    }
  ]
}
{% endschema %}